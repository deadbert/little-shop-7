<h1>Edit Item</h1>


<%= form_with url: "/items/#{@item.id}", method: :patch, data: {turbo: false} do |form| %>

  <section class="item_name"-<%= @item.name %>">
    <%= form.label :name %>
    <%= form.text_field :name, value: @item.name %>
  </section>

  <section class="item_description"-<%= @item.description %>">
    <%= form.label :description %>
    <%= form.text_area :description, value: @item.description %>
  </section>


  <section class="item_unit_price"-<%= @item.unit_price %>">
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price, value: @item.unit_price %>
  </section>

  <%= form.submit "Submit" %>
<% end %>
